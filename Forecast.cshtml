                        <td>{{Forecast.STORE_CODE}}</td>
                        <td>{{Forecast.PROD_LEVEL1_CODE}}</td>
                        <td>{{Forecast.PROD_LEVEL2_CODE}}</td>
                        <td>{{Forecast.PROD_LEVEL3_CODE}}</td>
