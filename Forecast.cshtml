                        <td>{{Forecast.FORECAST_SALE_VAL_AT_PRICE}}</td>
                        <td>{{Forecast.FORECAST_SALE_VAL_AT_COST}}</td>
                        <td>{{Forecast.ARC_DATE | date:'MM/dd/yyyy' }}</td>

